<Window x:Class="Biometria.Size"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biometria"
        mc:Ignorable="d"
        Title="Size" Height="150" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Label>Wysokość</Label>
            <TextBox x:Name="HeightTextBox" Width="50" Height="20" />
            <Label>px</Label>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
            <Label>Szerokość</Label>
            <TextBox x:Name="WidthTextBox" Width="50" Height="20" />
            <Label>px</Label>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
            <Button x:Name="Reset" Content="Reset" Click="Reset_Click" Margin="5"/>
            <Button x:Name="Confirm" Content="Zatwierdź"  Click="Confirm_Click" Margin="5"/>

        </StackPanel>

        
    </Grid>
</Window>
